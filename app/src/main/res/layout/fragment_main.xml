<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:theme="@android:style/ThemeOverlay.Material"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivityFragment">

    <TextView
        android:text="@string/my_apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_margin="2dip"
        android:textColor="#ff0c88b8"
        android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Spotify Streamer"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:textColor="#ffffff"
            android:background="#F08C35"
            android:id="@+id/button1"
            android:elevation="2dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button2"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:layout_weight="1"
            android:background="#F08C35"
            android:text="Scores App"
            android:textColor="#ffffffff" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Library App"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:textColor="#ffffffff"
                android:background="#F08C35"
                android:id="@+id/button3"
                android:elevation="2dp"
                android:layout_below="@+id/button2"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Build it bigger"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:textColor="#ffffffff"
                android:background="#F08C35"
                android:id="@+id/button4"
                android:elevation="2dp"
                android:layout_below="@+id/button3"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Bacon reader"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:textColor="#ffffffff"
                android:background="#F08C35"
                android:id="@+id/button5"
                android:elevation="2dp"
                android:layout_below="@+id/button4"
                android:layout_centerHorizontal="true" />


            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Capstone: my own app"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginLeft="60dip"
                android:layout_marginRight="60dip"
                android:textColor="#ffffffff"
                android:background="#ffff1053"
                android:id="@+id/button6"
                android:elevation="2dp"
                android:layout_below="@+id/button5"
                android:layout_centerHorizontal="true" />

    </LinearLayout>
</RelativeLayout>
